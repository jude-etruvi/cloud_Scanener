# Example credentials configuration
# Copy this file to credentials.yaml and fill in your values
# NEVER commit credentials.yaml to version control

aws:
  # Option 1: Use AWS profile
  profile: "default"

  # Option 2: Use explicit credentials (not recommended)
  # access_key_id: "YOUR_ACCESS_KEY"
  # secret_access_key: "YOUR_SECRET_KEY"
  # session_token: "YOUR_SESSION_TOKEN"  # if using temporary credentials

  # Option 3: Use IAM role (for EC2/ECS/Lambda)
  # role_arn: "arn:aws:iam::123456789012:role/SecurityScannerRole"

azure:
  # Option 1: Use Azure CLI authentication (recommended)
  use_cli: true

  # Option 2: Use Service Principal
  # tenant_id: "YOUR_TENANT_ID"
  # client_id: "YOUR_CLIENT_ID"
  # client_secret: "YOUR_CLIENT_SECRET"

  # Subscriptions to scan (leave empty for all)
  subscriptions: []

gcp:
  # Option 1: Use Application Default Credentials (recommended)
  use_adc: true

  # Option 2: Use Service Account key file
  # service_account_key_file: "/path/to/service-account-key.json"

  # Projects to scan (leave empty for all accessible projects)
  projects: []
